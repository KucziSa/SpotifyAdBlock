{
  "manifest_version": 2.1,
  "name": "Spotify Ad Remover",
   "description": "Removes audio ads on Spotifyâ„¢ Web Player. It also disables 'premium' button.",
  "version": "1.2",
  "permissions": 
   [
      "webRequest",
      "webRequestBlocking",
	   "*://open.spotify.com/*"
   ],
   "icons": 
   {
      "128": "icon/icon.png"
   },
   "browser_action": {
      "default_icon": "icon/icon.png",
      "default_popup": "popup/popup.html"
   },
   "background":
   {
    "scripts": ["scripts/background.js"],
    "persistent": true
   },
   "content_scripts": 
   [
  	{
  	  "matches": ["https://open.spotify.com/*"],
  	  "js": ["scripts/contentScript.js"],
  	  "run_at": "document_start"
  	},
    {
      "matches": ["https://open.spotify.com/*"],
      "js": ["scripts/sweetalert.min.js"],
      "css": ["css/snackbar.css", "css/buttonsRemoval.css"]
    }
   ],
	"web_accessible_resources": [ "scripts/*"]
}